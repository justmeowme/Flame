<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/background_alert"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:layout_gravity="center"
        android:text="Что это?"
        android:textSize="22sp"
        android:fontFamily="@font/font"
        android:textColor="#001E4C" />


    <EditText
        android:id="@+id/word"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#001E4C"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/font"
        android:hint="Напишите название на татарском "/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Проверить"
        android:id="@+id/check"
        android:fontFamily="@font/font"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_alert">
    </androidx.appcompat.widget.AppCompatButton>


</LinearLayout>